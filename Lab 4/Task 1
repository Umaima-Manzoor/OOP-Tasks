#include <iostream>
using namespace std;

class Car {
    private:
        string brand;
        string model;
        float price;
        bool status;

    public:

        Car() {
            brand = "Unknown";
            model = "Generic";
            price = 0.0;
            status = true;
        }

        void setBrand(string name) {
            brand = name;

        }

        void setModel(string mo) {
            model = mo;
        }

        void setPrice(float p) {
            price = p;
        }

        void rentalRequest() {
            bool check = Availability();
            if (check == true) {
                cout << " you have now rented this car"<<endl;
                status = false;
            }
            else {
            	cout << "This car has already been rented"<<endl;
			}

        
        }

        bool Availability() {
            if (status==true) {
                cout << "This car is available"<<endl;
                return true;
            }
            else {
                cout << "This car is not available"<<endl;
                return false;
            }
        }
        
        void displayDetails() {
        	cout << "Brand: "<<brand<<endl;
        	cout << "Model: "<<model<<endl;
        	cout << "Price: "<<price<<endl;
        	cout << "Status: ";
        	if (status==true) {
        		cout << "True";
			}
			else { cout << "False";
			}
			cout << endl<< endl;
		}
}; 

int main() {
    Car car1;
    cout << "Details before updating: "<<endl;
    car1.displayDetails();
    car1.setBrand("Toyota");
    car1.setPrice(546156.544);
    cout << "Details after updating: "<<endl;
    car1.displayDetails();
    cout << "Checking availability (before rental request):"<<endl;
    car1.Availability();
    cout <<"\nApplying for a rental request:"<<endl;
    car1.rentalRequest();
    cout << "\nChecking availability (after rental request):"<<endl;
    car1.Availability();
    cout << "\nApplying for a rental request (again): "<<endl;
    car1.rentalRequest();
}
