#include <iostream>
using namespace std;

class Car {
    private:
        string brand;
        string model;
        float price;
        bool status;
        float revenue;

    public:

        Car() {
            brand = "Unknown";
            model = "Generic";
            price = 0.0;
            status = true;
            revenue = 0.0;
        }

        Car(string br, string mo, float p, bool av) {
        	brand = br;
        	model = mo;
        	price = p;
        	status = av;
        	revenue = 0.0;
		}
		
		void applyDiscount(int days) {
			float discount;
			if (days > 10) {
				discount = price * 0.1;
				price -= discount;
				cout << "Price after discount: "<< price<<endl;
			}
			else if (days > 5) {
				discount = price * 0.05;
				price -= discount;
				cout << "Price after discount: "<< price<<endl;
			}
			else {
				cout << "No discount will be given. Price will remain same"<<endl;
			}
		} 

        void setBrand(string name) {
            brand = name;

        }

        void setModel(string mo) {
            model = mo;
        }

        void setPrice(float p) {
            price = p;
        }

        Car& rentalRequest() {
            bool check = Availability();
            if (check == true) {
                cout << " you have now rented this car"<<endl;
                status = false;
               
            }
            else {
            	cout <<"Sorry, but this car is not available at the moment, hence it cannot be rented"<<endl;
			}

        	return *this;
        }
        
        void afterRenting() {
        	if (status==true) {
        		cout << "You have now finished your renting period. The car has been returned"<<endl;
        		status=false;
			}
			else {
				cout << "The car is already available, and was not rented in the first place"<<endl;
			}
		}

        bool Availability() {
            if (status==true) {
                cout << "This car is available"<<endl;
                return true;
            }
            else {
                cout << "This car is not available"<<endl;
                return false;
            }
        }
        
        void displayDetails() {
        	cout << "Brand: "<<brand<<endl;
        	cout << "Model: "<<model<<endl;
        	cout << "Price: "<<price<<endl;
        	cout << "Status: ";
        	if (status==true) {
        		cout << "Available";
			}
			else { cout << "Rented";
			}
			cout << endl;
			cout << "Total Revenue: "<<revenue<<endl<<endl;
		}
		
		void totalRevenue(int days) {
			if (status == false) {
				this->revenue += price * days;
				status = true;
			}
			else 
				cout << "Sorry, but since it hasn't been rented, the revenue cannot be updated"<<endl;
		}
				
		~Car() {
			cout << "\nThis car of model "<<model<<" is being destroyed"<<endl;
		}
}; 

int main() {
    Car c1("Honda", "Manual", 64.3, true);
    cout << "Displaying details of Car 1:"<<endl;
    c1.displayDetails();
    
    c1.rentalRequest().totalRevenue(7);
    cout << "Display details of Car 1 after renting the car (1st time):"<<endl;
    c1.displayDetails();
    c1.afterRenting();
    
    c1.rentalRequest().totalRevenue(3);
    cout << "Display details of Car 1 after renting the car (2st time):"<<endl;
    c1.displayDetails();
    c1.afterRenting();

    
    
    
 	
}
